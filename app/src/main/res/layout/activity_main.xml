<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.khoir.emegency_service.MainActivity"
    android:background="@drawable/menu">



    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/tableLayout">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginLeft="50dp">



            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/bpbd1"
                android:text=""
                android:textAllCaps="false"
                android:textColor="@color/common_action_bar_splitter"
                android:textStyle="bold"
                android:id="@+id/button1"
                android:background="#00ffffff"/>
            <Button
                android:visibility="invisible"/>


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/rs"
                android:text=""
                android:textColor="@color/common_action_bar_splitter"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:id="@+id/button2"
                android:background="#00ffffff" />
            <Button
                android:visibility="invisible"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/polisi"
                android:text=""
                android:textColor="@color/common_action_bar_splitter"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:id="@+id/button3"
                android:background="#00ffffff"
                android:layout_alignTop="@+id/tableLayout"
                android:layout_toRightOf="@+id/imageView"
                android:layout_toEndOf="@+id/imageView" />


        </TableRow>
        <TableRow>
            <Button
                android:visibility="invisible"/>
        </TableRow>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="5dp"/>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">







        </TableRow>
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="5dp"/>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="50dp">


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/tweet"
            android:text=""
            android:textAllCaps="false"
            android:textStyle="bold"
            android:id="@+id/btntwitter"
            android:background="#00ffffff"/>
        <Button
            android:visibility="invisible"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/peta"
            android:text=""
            android:textColor="@color/common_action_bar_splitter"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:id="@+id/button4"
            android:background="#00ffffff" />
        <Button
            android:visibility="invisible"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ttg"
            android:text=""
            android:textColor="@color/common_action_bar_splitter"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:id="@+id/button5"
            android:background="#00ffffff" />


    </TableRow>
    </TableLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:background="@drawable/ini"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/lol" />

    <TextView
        android:id="@+id/lol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tableLayout"
        android:layout_alignParentStart="true" />





</RelativeLayout>

